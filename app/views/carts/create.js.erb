jQuery(document).ready(function ($) {
  $('span.cart-size').text("(<%= current_cart %>)");
  $('.alert').addClass('alert-success').text('<%= flash[:success] %>').slideDown();
  setTimeout(function() {
      $(".alert").fadeOut(2000);
    }, 2000);
  $("#divCart").show();
  $("#closeCart").click(function () {
        $("#divCart").hide();
    });
});
